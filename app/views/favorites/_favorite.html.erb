<% if current_user.already_favorited?(book) %>																									<%= link_to book_favorite_path(id: book.id, book_id: book.id), method: :delete, remote: true do %>
			<i class="fas fa-heart"></i><%= book.favorites.count %>
	<% end %>
<% else %>
	<%= link_to book_favorites_path(id: book.id, book_id: book.id) ,method: :post, remote: true do %>
			<i class="far fa-heart"></i><%= book.favorites.count %>
	<% end %>
<% end %>