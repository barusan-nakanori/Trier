<!DOCTYPE html>
<html>
  <head>
    <title>Trier</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand" href="#">Navbar</a>
      <% if user_signed_in? %>
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <%= link_to "投稿する", "#", class: "nav-link"%>
          </li>
          <li class="nav-item">
            <%= link_to "マイページ", "#", class: "nav-link"%>
          </li>
          <li class="nav-item">
            <%= link_to "ランキング", "#", class: "nav-link"%>
          </li>
          <li class="nav-item">
            <%= link_to "新着記事", "#", class: "nav-link"%>
          </li>
          <li class="nav-item">
            <%= link_to "ブックマーク", "#", class: "nav-link"%>
          </li>
          <li class="nav-item">
            <%= link_to "ログアウト", "#", class: "nav-link"%>
          </li>
        </ul>
      <% else %>
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <%= link_to "About", "#", class: "nav-link"%>
          </li>
          <li class="nav-item">
            <%= link_to "新着記事", "#", class: "nav-link"%>
          </li>
          <li class="nav-item">
            <%= link_to "ゲストログイン", "#", class: "nav-link"%>
          </li>
          <li class="nav-item">
            <%= link_to "ログイン", "#", class: "nav-link"%>
          </li>
        </ul>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
