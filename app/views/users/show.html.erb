<% if flash[:notice] %>
	<div class= "flash">
		<div class="col-md-offset-1 text-success">
			<%= flash[:notice] %>
		</div>
	</div>
<% end %>
<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<%= render "users/sidebar" , book:@book, user:@user %>
		</div>

		<div class="col-xs-9">
			<h1>Books</h1>
			<table class="table table-hover table-inverse">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
						<th>コメント</th>
					</tr>
				</thead>
				<tbody>
				
					<% @books.each do |book| %>
						<tr>
							<td>
								<%= link_to user_path(@user) do %>
									<%= attachment_image_tag book.user, :profile_image , size: "60x60",fallback: "HpGJ--S9_400x400.jpg" %>
								<% end %>
							</td>
							<td><%=link_to book.title,book_path(book.id) %></td>
							<td><%= book.body %></td>
							<td><%= book.comments.count %>件</td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>